{
  "compilerOptions": {
    "composite": true,
    "incremental": true,

    "baseUrl": ".",

    "skipLibCheck": true,
    "skipDefaultLibCheck": true,

    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "module": "NodeNext",

    "experimentalDecorators": true,


    "types": ["@rapid/config/@types"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"],
}
