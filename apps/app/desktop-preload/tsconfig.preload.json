{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "baseUrl": ".",
    "rootDir": "../../",
    "paths": {
      "@/*": ["../desktop-node/src/*"]
    },
    "target": "ES2020",
    "noEmitOnError": true,
    "module": "ES2020",
    "lib": ["ESNext", "DOM"],
    "experimentalDecorators": true,
    "sourceMap": false,

    "skipDefaultLibCheck": true,
    "skipLibCheck": true,

    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "Node",
    "types": [
      "@rapid/config/@types"
    ]
  },
  "include": [
    "./index.ts",
    "./server/**/*.ts",
    "./actions/**/*.ts",
    "./core/**/*.ts"
  ],
  "exclude": [
    "src/**/*.d.ts",
    "node_modules",
    "../**/*.test.ts"
  ],
  "references": [
    { "path": "../desktop-node/tsconfig.main.json" }
  ]
}

