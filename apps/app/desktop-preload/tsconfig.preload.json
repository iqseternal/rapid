{
  "compilerOptions": {
    "incremental": true,
    "baseUrl": ".",
    "rootDir": "../../",
    "types": [
      "@rapid/config/@types"
    ],
    "paths": {
      "@/*": ["../desktop-node/src/*"]
    },
    "noEmit": true,
    "lib": ["ESNext", "DOM"],
    "experimentalDecorators": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "./autoExpose.ts",
    "./index.ts",
    "./preload.d.ts"
  ],
  "exclude": ["node_modules"]
}

