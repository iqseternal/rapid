{
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "rootDir": "../../../",

    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noEmitOnError": true,
    "noUnusedParameters": false,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "allowUmdGlobalAccess": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,

    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowArbitraryExtensions": true,
    "allowUnusedLabels": true,
    "types": [
      "./src/@types"
    ],
    "paths": {
      "@components/*": ["src/components/*"],
      "@router/*": ["src/router/*"],
      "@views/*": ["src/views/*"],
      "@pages/*": ["src/pages/*"],
      "@libs/*": ["src/libs/*"],
      "@meta/*": ["src/meta/*"],
      "@scss/*": ["src/scss/*"],
      "@/*": ["src/*", "node_modules/@rapid/desktop-node/src/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.vue",
    "./src/**/*.tsx",

    "../../../config",

    "../../../packages/config/@types",
    "../../../packages/config",
    "../../../packages/libs-web/@types",
    "../../../packages/libs-web"
  ],
  "exclude": [
    "node_modules",
    "../../../packages/config/**/*.test.ts",
    "../../../packages/libs-web/**/*.test.ts"
  ]
}
