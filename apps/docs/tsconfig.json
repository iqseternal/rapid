{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true
  },

  "include": [
    "theme",
    "./env.d.ts",

    "src/**/*.ts",
    "src/**/*.tsx",
    "rspress.config.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "mdx": {
    "checkMdx": true
  }
}
