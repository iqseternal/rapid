{
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "rootDir": "../",
    "outDir": "./rd-dts",
    "lib": [
      "ESNext"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": true
  },
  "include": [
    "./rspack.ts",

    "../builder/**/*.ts",

    "./rd/*.json",
    "../package.json"
  ],
  "exclude": [
    "node_modules",
    "../builder/@types/**/*.d.ts",
    "../builder/@types-node/**/*.d.ts",
    "../builder/@types-web/**/*.d.ts"
  ]
}
