{
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "rootDir": "../",
    "lib": [
      "ESNext"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": true,
    "types": ["../config/@types"]
  },
  "include": [
    "./rspack.ts",
    "../config/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
