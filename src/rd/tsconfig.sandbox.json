{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "../rd-dts",
    "paths": {
      "rd/*": [
        "./*"
      ]
    },
    "target": "ES2020",
    "noEmitOnError": true,
    "module": "ES2020",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "experimentalDecorators": true,
    "sourceMap": false,
    "skipDefaultLibCheck": true,
    "strict": false,
    "skipLibCheck": true,
    "strictNullChecks": true,

    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "Node",
    "types": [
      "@rapid/config/@types-node"
    ]
  },
  "include": [
    "./code/electron-sandbox/**/*.ts",
    "./base/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "../**/*.test.ts"
  ]
}
