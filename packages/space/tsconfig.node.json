{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "scripts/**/*",

    "src/main/**/*",
    "src/preload/**/*",
    "src/code/**/*",
    "src/constants/**/*.ts",
    "src/config/**/*.ts",
    "src/global/**/*.ts",

    "./test.config.json",
    "./user.config.json",
    "./app.config.json",

    "electron.vite.config.*",
    "vite.config.util.ts",
    "src/@types/**/*.d.ts",
    "src/env.d.ts"
  ],
  "exclude": ["node_modules", "dist", "out", "src/renderer/**/*"],
  "compilerOptions": {
    "noEmit": true,
    "noEmitOnError": true,
    "noUncheckedIndexedAccess": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "allowUnusedLabels": true,
    "isolatedModules": false,
    "composite": true,
    "removeComments": true,
    "noEmitHelpers": true,
    "downlevelIteration": true,
    "strict": true,
    "types": ["electron-vite/node"],
    "baseUrl": ".",
    "paths": {
      "#code/*": ["src/code/*"],
      "#service/*": ["src/code/service/*"],
      "#constants/*": ["src/constants/*"],
      "#/*": ["src/*"]
    }
  }
}
