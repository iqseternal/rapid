{
  "compilerOptions": {
    "declaration": true,
    "noEmit": false,
    "outDir": "./dist",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": "../../",
    "skipDefaultLibCheck": true,
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "esModuleInterop": false,
    "isolatedModules": true,
    "preserveSymlinks": true,
    "strict": false,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUmdGlobalAccess": true,
    "allowArbitraryExtensions": true,
    "types": [
      "reflect-metadata",
      "../../builder/@types",
      "../../builder/@types-web",
      "../../src/rd/code/browser/types",
      "node"
    ],
    "jsx": "react-jsx",
    "paths": {
      "@rapid/libs": ["../libs"],
      "@rapid/libs-web": ["../libs-web"],
      "@rapid/extensions": ["../extensions"],
      "@rapid/libs/*": ["../libs/*"],
      "@rapid/libs-web/*": ["../libs-web/*"],
      "@rapid/extensions/*": ["../extensions/*"],
      "rd/*": ["../../src/rd/*"],
      "@/*": ["../../src/rd/code/browser/*"]
    }
  },
  "include": [
    "../../packages/**/*.ts",
    "../../packages/**/*.tsx",
    "../../src/**/*.ts",
    "../../src/**/*.tsx"
  ],
  "exclude": [
    "../../**/node_modules/**/*",
    "../../**/*.test.ts",
    "../../**/rspack.config.ts",
    "../../**/rsbuild.config.ts",
    "../../**/rspress.config.ts",
    "../../src/rspack.ts"
  ]
}
