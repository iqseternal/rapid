{
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "compilerOptions": {
    "incremental": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "composite": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "allowUnusedLabels": true,
    "target": "ESNext",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "types": [
      "../../builder/@types-web"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
