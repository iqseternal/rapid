
{
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.d.ts",
    "./**/*.vue"
  ],
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "lib": ["DOM", "ESNext", "ES2015.Promise"],
    "jsx": "preserve",
    "types": [
      "vite/client"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noEmitOnError": true,
    "noImplicitReturns": true
  },
  "exclude": ["node_modules"]
}
