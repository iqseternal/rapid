{
  "include": [
    "./@types/**/*.ts",
    "./@types/**/*.tsx",

    "./common/**/*.ts",
    "./common/**/*.tsx",
    "./components/**/*.ts",
    "./components/**/*.tsx",
    "./hooks/**/*.ts",
    "./hooks/**/*.tsx",
    "./router/**/*.ts",
    "./router/**/*.tsx",
    "./styled/**/*.ts",
    "./styled/**/*.tsx",

    "./index.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "lib": ["DOM", "ESNext", "ES2015.Promise"],
    "jsx": "react-jsx",
    "types": [],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "isolatedModules": true,
    "noEmitOnError": true,
    "noImplicitReturns": true
  },
  "exclude": [
    "node_modules"
  ]
}
