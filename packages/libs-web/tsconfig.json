{
  "include": [
    "./@types/**/*.ts",
    "./@types/**/*.tsx",

    "./common/**/*.ts",
    "./common/**/*.tsx",
    "./components/**/*.ts",
    "./components/**/*.tsx",
    "./hooks/**/*.ts",
    "./hooks/**/*.tsx",
    "./router/**/*.ts",
    "./router/**/*.tsx",
    "./styled/**/*.ts",
    "./styled/**/*.tsx",

    "index.ts"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "composite": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules"
  ]
}
