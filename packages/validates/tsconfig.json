{
  "compilerOptions": {
    "incremental": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "isolatedModules": true,
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "strictNullChecks": true
  },
  "include": [
    "./**/*.ts", "./**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
