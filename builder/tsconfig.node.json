{
  "extends": "../tsconfig.build.json",
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "types": [
      "./@types-node"
    ],
    "isolatedModules": true,
    "strictNullChecks": true,
    "noImplicitAny": true
  },
  "include": [
    "builder/**/*.ts",
    "builder/enums.ts"
  ],
  "exclude": ["node_modules"]
}
